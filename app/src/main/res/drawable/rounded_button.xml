<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="oval">
            <solid android:color="#00ff00" />
            <size
                android:width="15dp"
                android:height="15dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <stroke
                android:color="@color/black"
                android:dashWidth="10dp"
                android:dashGap="4dp"
                android:width="1dp" />
            <size
                android:width="20dp"
                android:height="20dp" />
        </shape>
    </item>
</layer-list>
